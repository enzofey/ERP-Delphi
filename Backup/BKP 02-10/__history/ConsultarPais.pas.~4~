unit ConsultarPais;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Data.DB, Vcl.Grids, Vcl.DBGrids, PaisDataModule,
  Vcl.StdCtrls, Vcl.ExtCtrls;

type
  TForm1 = class(TForm)
    Panel1: TPanel;
    btnSelecionarEstado: TButton;
    GridEstado: TDBGrid;
  private
    PaSigla: String;
    PaPais: String;
    PaAtivo: String;
  public
   function SelecionarPais: string;
   function Sigla: string;
  end;

var
  Form1: TForm1;

implementation

{$R *.dfm}

function TConsultarPaisForm.SelecionarPais: string;
begin
  PaSigla := '';
  ShowModal;
  Result := PaSigla;
end;

procedure TConsultarPaisForm.btnSelecionarEstadoClick(Sender: TObject);
begin
  PaSigla := CadPaisDataModule.FDQuery1.FieldByName('codigo').AsString;
  Close;
end;

function TConsultarPaisForm.Sigla: string;
begin
  Result := PaSigla;
end;
end.
