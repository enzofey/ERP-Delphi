unit ConsultarCorForm;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.ExtCtrls, Data.DB, Vcl.Grids,
  Vcl.DBGrids, Vcl.StdCtrls, CorDM;

type
  TConsultarCor = class(TForm)
    Panel1: TPanel;
    Grid: TDBGrid;
    BtnSelecionarCor: TButton;
    procedure FormShow(Sender: TObject);
    procedure BtnSelecionarCorClick(Sender: TObject);
  private
    CCodigo: string;
    CDescricao: string;
    CAtivo: string;
  public
    function SelecionarCor: string;
    function Descricao: string;
    function Ativo: string;
  end;

var
  ConsultarCor: TConsultarCor;

implementation

{$R *.dfm}

function TConsultarCor.SelecionarCor: string;
begin
  CCodigo := '';
  ShowModal;
  Result := CCodigo;
end;

function TConsultarCor.Descricao: string;
begin
  Result := CDescricao;
end;

function TConsultarCor.Ativo: string;
begin
  Result := CAtivo;
end;

procedure TConsultarCor.FormShow(Sender: TObject);
var
  i: Integer;
begin
  for i := 0 to Grid.Columns.Count - 1 do
    Grid.Columns[i].Width := Grid.Canvas.TextWidth(Grid.Columns[i].Title.Caption + '     ');
end;

procedure TConsultarCor.BtnSelecionarCorClick(Sender: TObject);
begin
 with CadCorDM.qryConsultarCor do
 begin
  CCodigo := FieldByName('codigo').AsString;
  CDescricao := FieldByName('descricao').AsString;
  CAtivo := FieldByName('ativo').AsString;
 end;
  Close;
end;
end.
