unit ConsultaDepositoForm;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.ExtCtrls, Data.DB, Vcl.Grids,
  Vcl.DBGrids, Vcl.StdCtrls;

type
  TForm3 = class(TForm)
    Panel1: TPanel;
    GridConsultaDeposito: TDBGrid;
    BtnSelecionarDeposito: TButton;
    procedure BtnSelecionarDepositoClick(Sender: TObject);
    procedure FormShow(Sender: TObject);
  private
    DCodigo: string;
    DDescricao: string;
    DAtivo: string;
  public
    function SelecionarDeposito: string;
    function Descricao: string;
    function Ativo: string;
  end;

var
  Form3: TForm3;

implementation

  uses ConsultaDepositoModule;

{$R *.dfm}

function TForm3.SelecionarDeposito: string;
begin
  DCodigo := '';
  ShowModal;
  Result := DCodigo;
end;

function TForm3.Descricao: string;
begin
  Result := DDescricao;
end;

function TForm3.Ativo: string;
begin
  Result := DAtivo;
end;

procedure TForm3.FormShow(Sender: TObject);
var
  i: Integer;
begin
  for i := 0 to GridConsultaDeposito.Columns.Count - 1 do
    GridConsultaDeposito.Columns[i].Width := GridConsultaDeposito.Canvas.TextWidth(GridConsultaDeposito.Columns[i].Title.Caption + '     ');
end;

procedure TForm3.BtnSelecionarDepositoClick(Sender: TObject);
begin
  DCodigo := DataModule3.FDQuery.FieldByName('codigo').AsString;
  DDescricao := DataModule3.FDQuery.FieldByName('descricao').AsString;
  DAtivo := DataModule3.FDQuery.FieldByName('ativo').AsString;
  Close;
end;
end.
