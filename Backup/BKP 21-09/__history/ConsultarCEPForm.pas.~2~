unit ConsultarCEPForm;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Data.DB, Vcl.Grids, Vcl.DBGrids,
  Vcl.StdCtrls, Vcl.ExtCtrls,
  CEPDataModule;

type
  TConsultarCEPForma = class(TForm)
    Panel1: TPanel;
    btnSelecionarCEP: TButton;
    Grid: TDBGrid;
    procedure FormShow(Sender: TObject);
    procedure btnSelecionarCEPClick(Sender: TObject);
  private
    CepCep: string;
    CepCidade: string;
    CepEstado: string;
    CepPais: string;
    CepAtivo: string;
  public
    function SelecionarCEP: string;
    function CEP: string;
    function Cidade: string;
    function Estado: string;
    function Pais: string;
    function Ativo: string;
  end;

var
  ConsultarCEPForma: TConsultarCEPForma;

implementation

{$R *.dfm}

function TConsultarCEPForma.SelecionarCEP: string;
begin
  CepCep := '';
  ShowModal;
  Result := CepCep;
end;

function TConsultarCEPForma.CEP: string;
begin
  Result := CepCep;
end;

function TConsultarCEPForma.Cidade: string;
begin
  Result := CepCidade;
end;

function TConsultarCEPForma.Estado: string;
begin
  Result := CepEstado;
end;

function TConsultarCEPForma.Pais: string;
begin
  Result := CepPais;
end;

function TConsultarCEPForma.Ativo: string;
begin
  Result := CepAtivo;
end;

procedure TConsultarCEPForma.btnSelecionarCEPClick(Sender: TObject);
begin
  CepCep := CadCepDataModule.FDQuery1.FieldByName('CEP').AsString;
  CepCidade := CadCepDataModule.FDQuery1.FieldByName('Cidade').AsString;
  CepEstado := CadCepDataModule.FDQuery1.FieldByName('Estado').AsString;
  CepPais := CadCepDataModule.FDQuery1.FieldByName('Pais').AsString;
  CepAtivo := CadCepDataModule.FDQuery1.FieldByName('ativo').AsString;
  Close;
end;

procedure TConsultarCEPForma.FormShow(Sender: TObject);
var
  i: Integer;
begin
  for i := 0 to Grid.Columns.Count - 1 do
    Grid.Columns[i].Width := Grid.Canvas.TextWidth(Grid.Columns[i].Title.Caption + '     ');
end;
end.
