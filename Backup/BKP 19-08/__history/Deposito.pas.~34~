unit Deposito;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.ExtCtrls, Vcl.StdCtrls, Vcl.ComCtrls,
  DepositoDataModule, ConsultarDepositoForm,
  Log, LogDataModule,
  GlobalUnit;

type
  TCadDeposito = class(TForm)
    Panel1: TPanel;
    lblCodigoDeposito: TLabel;
    LblDescricaoDeposito: TLabel;
    lblAtivoDeposito: TLabel;
    CBAtivoDeposito: TCheckBox;
    EdtDescricaoDeposito: TEdit;
    EdtCodigoDeposito: TEdit;
    btnIncluirDeposito: TButton;
    BtnGravarAlterarDeposito: TButton;
    btnGravarIncluirDeposito: TButton;
    btnAlterarDeposito: TButton;
    btnDesistirDeposito: TButton;
    btnConsultarDeposito: TButton;
    btnExcluirDeposito: TButton;
    btnFechar: TButton;
    procedure btnIncluirDepositoClick(Sender: TObject);
    procedure btnGravarIncluirDepositoClick(Sender: TObject);
    procedure btnAlterarDepositoClick(Sender: TObject);
    procedure BtnGravarAlterarDepositoClick(Sender: TObject);
    procedure btnDesistirDepositoClick(Sender: TObject);
    procedure btnExcluirDepositoClick(Sender: TObject);
    procedure btnConsultarDepositoClick(Sender: TObject);
    procedure btnFecharClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  CadDeposito: TCadDeposito;

implementation

{$R *.dfm}

procedure TCadDeposito.BtnIncluirDepositoClick(Sender: TObject);
begin
  EdtCodigoDeposito.Clear;
  EdtDescricaoDeposito.Clear;

  BtnIncluirDeposito.Visible := False;
  BtnAlterarDeposito.Visible := False;
  BtnConsultarDeposito.Visible:= False;
  BtnExcluirDeposito.Visible := False;

  BtnGravarIncluirDeposito.Visible := True;
  BtnDesistirDeposito.Visible := True;

  EdtCodigoDeposito.Enabled := True;
  EdtDescricaoDeposito.Enabled := True;
  CBAtivoDeposito.Enabled := True;
end;

procedure TCadDeposito.BtnGravarIncluirDepositoClick(Sender: TObject);
var
  codigo, descricao, ativo, tela: string;
  data: tdatetime;
begin
 codigo:= EdtCodigoDeposito.Text;
 descricao:= EdtDescricaoDeposito.Text;
 if CBAtivoDeposito.Checked then ativo := 'S'
 else ativo := 'N';
 tela := 'CadDeposito';
 data := Now;

  if EdtCodigoDeposito.Text = '' then begin
  ShowMessage('Código não pode ser vazio!');
  end
  else begin

  if EdtDescricaoDeposito.Text = '' then begin
  ShowMessage('Descrição não pode ser vazia!');
  end
  else begin

 CadDepositoDataModule.FDQuery1.SQL.Clear;
 CadDepositoDataModule.FDQuery1.SQL.Text :=
 'SELECT * FROM cadDeposito WHERE codigo=:codigo';
 CadDepositoDataModule.FDQuery1.ParamByName('codigo').AsString := codigo;
 CadDepositoDataModule.FDQuery1.Open;

 if NOT CadDepositoDataModule.FDQuery1.IsEmpty then begin
 showmessage('Deposito já cadastrado!');
 end
 else begin
 CadDepositoDataModule.FDQuery1.SQL.Clear;
 CadDepositoDataModule.FDQuery1.SQL.Text := 'insert into cadDeposito (codigo, descricao, ativo) values (:codigo, :descricao, :ativo)';
 CadDepositoDataModule.FDQuery1.ParamByName('codigo').AsString := codigo;
 CadDepositoDataModule.FDQuery1.ParamByName('descricao').AsString := descricao;
 CadDepositoDataModule.FDQuery1.ParamByName('ativo').AsString := ativo;

 LogModule.InserirLog.SQL.Clear;
 LogModule.InserirLog.SQL.Text :=
 'insert into logs (descricao, tela, data, usuario, emp_id) values (:descricao, :tela, :data, :usuario, :emp_id)';
 LogModule.InserirLog.ParamByName('descricao').AsString :=
 'Inseriu o depósito ' + descricao + ' no código ' + codigo + ' e ativo ' + ativo;
 LogModule.InserirLog.ParamByName('tela').AsString := tela;
 LogModule.InserirLog.ParamByName('data').AsDatetime := Data;
 LogModule.InserirLog.ParamByName('usuario').AsString := UsuarioLogado;
 LogModule.InserirLog.ParamByName('emp_id').AsString := EmpresaLogada;
 try
 CadDepositoDataModule.FDQuery1.ExecSQL;
 LogModule.InserirLog.ExecSQL;
 ShowMessage('Gravado com sucesso!');
 BtnIncluirDeposito.Visible := True;
 BtnAlterarDeposito.Visible := True;
 BtnConsultarDeposito.Visible := True;
 BtnExcluirDeposito.Visible := True;

 BtnGravarIncluirDeposito.Visible := False;
 BtnDesistirDeposito.Visible := False;

 EdtCodigoDeposito.Enabled := False;
 EdtDescricaoDeposito.Enabled := False;
 CBAtivoDeposito.Enabled := False;
 except
 ShowMessage('Erro na gravação!');
 end;
end;
end;
end;
end;

procedure TCadDeposito.BtnAlterarDepositoClick(Sender: TObject);
begin
  if EdtCodigoDeposito.Text = '' then
  ShowMessage('Nenhum deposito selecionado!')
  else begin
  BtnIncluirDeposito.Visible := False;
  BtnGravarIncluirDeposito.Visible := False;
  BtnConsultarDeposito.Visible := False;
  BtnAlterarDeposito.Visible := False;
  BtnExcluirDeposito.Visible := False;

  EdtDescricaoDeposito.Enabled := True;
  CBAtivoDeposito.Enabled := True;

  BtnGravarAlterarDeposito.Visible := True;
  BtnDesistirDeposito.Visible := True;
end;
end;

procedure TCadDeposito.BtnGravarAlterarDepositoClick(Sender: TObject);
var codigo, descricao, ativo, tela: string;
    data: tdatetime;
begin
 codigo:= EdtCodigoDeposito.Text;
 descricao:= EdtDescricaoDeposito.Text;
 if CBAtivoDeposito.Checked then ativo := 'S'
 else ativo := 'N';
 data := now;
 tela := 'CadDeposito';

  if EdtCodigoDeposito.Text = '' then begin
  ShowMessage('Código não pode ser vazio!');
  end
  else begin

  if EdtDescricaoDeposito.Text = '' then begin
  ShowMessage('Descrição não pode ser vazia!');
  end
  else begin

 CadDepositoDataModule.FDQuery1.SQL.Clear;
 CadDepositoDataModule.FDQuery1.SQL.Text :=
 'update cadDeposito set descricao = :descricao, ativo = :ativo where codigo = :codigo';
 CadDepositoDataModule.FDQuery1.ParamByName('codigo').AsString := codigo;
 CadDepositoDataModule.FDQuery1.ParamByName('descricao').AsString := descricao;
 CadDepositoDataModule.FDQuery1.ParamByName('ativo').AsString := ativo;

 LogModule.InserirLog.SQL.Clear;
 LogModule.InserirLog.SQL.Text :=
 'insert into logs (descricao, tela, data, emp_id, usuario) values (:descricao, :tela, :data, :emp_id, :usuario)';
 LogModule.InserirLog.ParamByName('descricao').AsString :=
 'Alterou o depósito ' + descricao + ' no código ' + codigo + ' e ativo ' + ativo;
 LogModule.InserirLog.ParamByName('tela').AsString := tela;
 LogModule.InserirLog.ParamByName('data').AsDatetime := Data;
 LogModule.InserirLog.ParamByName('usuario').AsString := UsuarioLogado;
 LogModule.InserirLog.ParamByName('emp_id').AsString := EmpresaLogada;
 try
 CadDepositoDataModule.FDQuery1.ExecSQL;
 LogModule.InserirLog.ExecSQL;
 ShowMessage('Gravado com sucesso!');
 BtnIncluirDeposito.Visible := True;
 BtnAlterarDeposito.Visible := True;
 BtnConsultarDeposito.Visible := True;
 BtnExcluirDeposito.Visible := True;

 BtnGravarIncluirDeposito.Visible := False;
 BtnDesistirDeposito.Visible := False;
 BtnGravarAlterarDeposito.Visible := False;

 EdtCodigoDeposito.Enabled := False;
 EdtDescricaoDeposito.Enabled := False;
 CBAtivoDeposito.Enabled := False;
 except
 ShowMessage('Erro na gravação!');
 end;
end;
end;
end;

procedure TCadDeposito.btnConsultarDepositoClick(Sender: TObject);
var
  codigo, descricao, ativo: string;
begin
  CadDepositoDataModule.FDQuery.Close;
  CadDepositoDataModule.FDQuery.Open;
  Application.CreateForm(TConsultarDeposito, ConsultarDeposito);
  codigo := ConsultarDeposito.SelecionarDeposito;
  if codigo <> '' then
  begin
    descricao := ConsultarDeposito.Descricao;
    EdtCodigoDeposito.Text := codigo;
    EdtDescricaoDeposito.Text := descricao;
    ativo := ConsultarDeposito.Ativo;
    CBAtivoDeposito.Checked := ativo = 'S';
  end;
end;

procedure TCadDeposito.BtnDesistirDepositoClick(Sender: TObject);
begin
  EdtCodigoDeposito.Clear;
  EdtDescricaoDeposito.Clear;

  EdtCodigoDeposito.Enabled := False;
  EdtDescricaoDeposito.Enabled := False;
  CBAtivoDeposito.Enabled := False;

  BtnGravarIncluirDeposito.Visible := False;
  BtnDesistirDeposito.Visible := False;
  BtnGravarAlterarDeposito.Visible := False;

  BtnIncluirDeposito.Visible := True;
  BtnAlterarDeposito.Visible := True;
  BtnConsultarDeposito.Visible := True;
  BtnExcluirDeposito.Visible := True;
end;

procedure TCadDeposito.BtnExcluirDepositoClick(Sender: TObject);
var codigo, descricao, ativo, tela: string;
    data: tdatetime;
begin
 codigo:= EdtCodigoDeposito.Text;
 data := now;
 tela := 'CadDeposito';
 descricao := EdtDescricaoDeposito.text;
 if CBAtivoDeposito.Checked then ativo := 'S'
 else ativo := 'N';

 CadDepositoDataModule.FDQuery1.SQL.Clear;
 CadDepositoDataModule.FDQuery1.SQL.Text :=
 'SELECT * FROM estoque WHERE deposito = :codigo';
 CadDepositoDataModule.FDQuery1.ParamByName('codigo').AsString := codigo;
 CadDepositoDataModule.FDQuery1.Open;

 if not CadDepositoDataModule.FDQuery1.IsEmpty then begin
 ShowMessage('Depósito está sendo usado no estoque, favor verifique!');
 end
 else begin

 CadDepositoDataModule.FDQuery1.SQL.Clear;
 CadDepositoDataModule.FDQuery1.SQL.Text :=
 'SELECT * FROM CADDEPOSITO WHERE CODIGO = :codigo';
 CadDepositoDataModule.FDQuery1.ParamByName('codigo').AsString := codigo;
 CadDepositoDataModule.FDQuery1.Open;

 if CadDepositoDataModule.FDQuery1.IsEmpty then begin
 ShowMessage('Deposito não encontrado!')
 end
 else begin
 CadDepositoDataModule.FDQuery1.SQL.Clear;
 CadDepositoDataModule.FDQuery1.SQL.Text := 'delete from caddeposito where codigo = :codigo';
 CadDepositoDataModule.FDQuery1.ParamByName('codigo').AsString := codigo;

 LogModule.InserirLog.SQL.Clear;
 LogModule.InserirLog.SQL.Text :=
 'insert into logs (descricao, tela, data, emp_id, usuario) values (:descricao, :tela, :data, :emp_id, :usuario)';
 LogModule.InserirLog.ParamByName('descricao').AsString :=
 'Deletou o depósito ' + descricao + ' no código ' + codigo + ' e ativo ' + ativo;
 LogModule.InserirLog.ParamByName('tela').AsString := tela;
 LogModule.InserirLog.ParamByName('data').AsDatetime := Data;
 LogModule.InserirLog.ParamByName('usuario').AsString := UsuarioLogado;
 LogModule.InserirLog.ParamByName('emp_id').AsString := EmpresaLogada;
 try
 CadDepositoDataModule.FDQuery1.ExecSQL;
 LogModule.InserirLog.ExecSQL;
 ShowMessage('Excluído com sucesso!');
 EdtCodigoDeposito.Clear;
 EdtDescricaoDeposito.Clear;
 except
 ShowMessage('Erro na gravação!');
 end;
end;
end;
end;

procedure TCadDeposito.btnFecharClick(Sender: TObject);
begin
   begin
    (Parent as TTabSheet).PageControl := nil;
    Parent.Free;
  end;
end;

end.
