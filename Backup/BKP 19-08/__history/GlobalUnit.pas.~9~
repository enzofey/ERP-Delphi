unit GlobalUnit;

interface

var UsuarioLogado: String;
var EmpresaLogada: String;
procedure FecharTela(Sender: TObject);

implementation

Uses Vcl.ComCtrls, Vcl.Controls;

procedure FecharTela(Sender: TObject);
var
  Ctrl: TControl;
begin
  Ctrl := TControl(Sender);
    if Ctrl.Parent is TTabSheet then
    begin
      (Ctrl.Parent as TTabSheet).Free;
      Exit;
    end;
    Ctrl := Ctrl.Parent;
  end;
end.
