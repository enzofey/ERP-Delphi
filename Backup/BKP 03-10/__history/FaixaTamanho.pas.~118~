unit FaixaTamanho;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.ExtCtrls, Vcl.StdCtrls, Data.DB, Vcl.ComCtrls,
  Vcl.Grids, Vcl.DBGrids,
  FaixaTamanhoDM, ConsultarFaixaForm,
  Log, LogDM,
  GlobalUnit, Vcl.Buttons;

type
  TCadFaixaTamanho = class(TForm)
    Pages: TPageControl;
    AcessoPage: TTabSheet;
    CadastroPage: TTabSheet;
    btnAlterar: TButton;
    btnDesistir: TButton;
    btnExcluir: TButton;
    btnFechar: TButton;
    btnGravarAlterar: TButton;
    btnGravarIncluir: TButton;
    btnIncluir: TButton;
    CBAtivo: TCheckBox;
    edtCodigo: TEdit;
    edtDescricao: TEdit;
    GridConsultarFaixa: TDBGrid;
    GridTamanhos: TDBGrid;
    lblAtivo: TLabel;
    lblCodigo: TLabel;
    lblDescricao: TLabel;
    RGAcessoAtivo: TRadioGroup;
    lblConsCodigo: TLabel;
    EdtAcessoCodigo: TEdit;
    EdtAcessoDescricao: TEdit;
    SBConsFaixa: TSpeedButton;
    btnAcessoFechar: TButton;
    btnAcessoConsultar: TButton;
    AcessoGrid: TDBGrid;
    procedure btnFecharClick(Sender: TObject);
    procedure btnIncluirClick(Sender: TObject);
    procedure btnDesistirClick(Sender: TObject);
    procedure FormShow(Sender: TObject);
    procedure btnGravarIncluirClick(Sender: TObject);
    procedure btnAlterarClick(Sender: TObject);
    procedure GridConsultarFaixaCellClick(Column: TColumn);
    procedure btnGravarAlterarClick(Sender: TObject);
    procedure GridTamanhosCellClick(Column: TColumn);
    procedure btnExcluirClick(Sender: TObject);
    procedure SBConsFaixaClick(Sender: TObject);
    procedure EdtAcessoCodigoExit(Sender: TObject);
    procedure btnAcessoConsultarClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  CadFaixaTamanho: TCadFaixaTamanho;

implementation

{$R *.dfm}

Uses MenuPrincipal;

procedure TCadFaixaTamanho.FormShow(Sender: TObject);
var i: Integer;
begin
  CadFaixaTamanhoDM.ConsultarTamanho.SQL.Clear;
  CadFaixaTamanhoDM.ConsultarTamanho.SQL.Text :=
  'select distinct(codigo), descricao from cadtamanho where ativo = :ativo order by descricao desc';
  CadFaixaTamanhoDM.ConsultarTamanho.ParamByName('ativo').AsString := 'S';
  CadFaixaTamanhoDM.ConsultarTamanho.Open;

  CadFaixaTamanhoDM.ConsultarFaixa.SQL.Clear;
  CadFaixaTamanhoDM.ConsultarFaixa.SQL.Text :=
  'select * from cadfaixa';
  CadFaixaTamanhoDM.ConsultarFaixa.Open;

  for i := 0 to GridConsultarFaixa.Columns.Count - 1 do
    GridConsultarFaixa.Columns[i].Width := GridConsultarFaixa.Canvas.TextWidth(GridConsultarFaixa.Columns[i].Title.Caption + '     ');
  for i := 0 to GridTamanhos.Columns.Count - 1 do
    GridTamanhos.Columns[i].Width := GridTamanhos.Canvas.TextWidth(GridTamanhos.Columns[i].Title.Caption + '     ');
end;

procedure TCadFaixaTamanho.btnIncluirClick(Sender: TObject);
var I: Integer;
begin
  EdtCodigo.Enabled := True;
  CBAtivo.Enabled := True;
  GridConsultarFaixa.Enabled := False;
  GridTamanhos.Enabled := True;

  EdtCodigo.Clear;
  EdtDescricao.Clear;

  btnIncluir.Visible := False;
  btnAlterar.Visible := False;
  btnExcluir.Visible := False;

  btnDesistir.Visible := True;
  btnGravarIncluir.Visible := True;

  CadFaixaTamanhoDM.ConsultarTamanho.SQL.Clear;
  CadFaixaTamanhoDM.ConsultarTamanho.SQL.Text :=
  'select distinct(codigo), descricao from cadtamanho where ativo = :ativo order by descricao desc';
  CadFaixaTamanhoDM.ConsultarTamanho.ParamByName('ativo').AsString := 'S';
  CadFaixaTamanhoDM.ConsultarTamanho.Open;

  CadFaixaTamanhoDM.ConsultarFaixa.SQL.Clear;
  CadFaixaTamanhoDM.ConsultarFaixa.SQL.Text :=
  'select * from cadfaixa';
  CadFaixaTamanhoDM.ConsultarFaixa.Open;

  for i := 0 to GridConsultarFaixa.Columns.Count - 1 do
    GridConsultarFaixa.Columns[i].Width := GridConsultarFaixa.Canvas.TextWidth(GridConsultarFaixa.Columns[i].Title.Caption + '     ');
  for i := 0 to GridTamanhos.Columns.Count - 1 do
    GridTamanhos.Columns[i].Width := GridTamanhos.Canvas.TextWidth(GridTamanhos.Columns[i].Title.Caption + '     ');
end;

procedure TCadFaixaTamanho.btnGravarIncluirClick(Sender: TObject);
var codigo, descricao, ativo: string;
    I: Integer;
begin
  codigo := EdtCodigo.Text;
  Descricao := EdtDescricao.Text;
  if CBAtivo.Checked then Ativo := 'S'
  else Ativo := 'N';

  if EdtCodigo.Text = '' then begin
  ShowMessage('Código não pode ser vazio!');
  end
  else begin

  if EdtDescricao.Text = '' then begin
  ShowMessage('Descrição não pode ser vazia!');
  end
  else begin

  CadFaixaTamanhoDM.SelectQuery.SQL.Clear;
  CadFaixaTamanhoDM.SelectQuery.Close;
  CadFaixaTamanhoDM.SelectQuery.SQL.Text :=
  'select * from cadfaixa where descricao = :descricao';
  CadFaixaTamanhoDM.SelectQuery.ParamByName('descricao').AsString := descricao;
  CadFaixaTamanhoDM.SelectQuery.Open;

  if not CadFaixaTamanhoDM.SelectQuery.IsEmpty then begin
  ShowMessage('Existe outra faixa com os mesmos tamanhos! Favor verifique!')
  end
  else begin

  CadFaixaTamanhoDM.InsertQuery.SQL.Clear;
  CadFaixaTamanhoDM.InsertQuery.SQL.Text :=
  'insert into cadfaixa (codigo, descricao, ativo) values (:codigo, :descricao, :ativo)';
  CadFaixaTamanhoDM.InsertQuery.ParamByName('codigo').AsString := codigo;
  CadFaixaTamanhoDM.InsertQuery.ParamByName('descricao').AsString := descricao;
  CadFaixaTamanhoDM.InsertQuery.ParamByName('ativo').AsString := ativo;

  LogsDM.InserirLog.SQL.Clear;
  LogsDM.InserirLog.SQL.Text :=
  'insert into logs (descricao, tela, data, emp_id, usuario) values (:descricao, :tela, :data, :emp_id, :usuario)';
  LogsDM.InserirLog.ParamByName('descricao').AsString :=
  'Inseriu a faixa no código ' + codigo + ' na descrição ' + descricao + ' e ativo ' + ativo;
  LogsDM.InserirLog.ParamByName('tela').AsString := 'CadFaixaTamanho';
  LogsDM.InserirLog.ParamByName('data').AsDatetime := Now;
  LogsDM.InserirLog.ParamByName('usuario').AsString := UsuarioLogado;
 LogsDM.InserirLog.ParamByName('emp_id').AsString := EmpresaLogada;
  try
  CadFaixaTamanhoDM.InsertQuery.ExecSQL;
  LogsDM.InserirLog.ExecSQL;
  ShowMessage('Incluído com sucesso!');

  CadFaixaTamanhoDM.ConsultarFaixa.Close;
  CadFaixaTamanhoDM.ConsultarFaixa.Open;

  EdtCodigo.Enabled := False;
  EdtDescricao.Enabled := False;
  CBAtivo.Enabled := False;
  GridConsultarFaixa.Enabled := True;
  GridTamanhos.Enabled := False;

  btnIncluir.Visible := True;
  btnAlterar.Visible := True;
  btnExcluir.Visible := True;

  btnDesistir.Visible := False;
  btnGravarIncluir.Visible := False;

  CadFaixaTamanhoDM.ConsultarTamanho.SQL.Clear;
  CadFaixaTamanhoDM.ConsultarTamanho.SQL.Text :=
  'select distinct(codigo), descricao from cadtamanho where ativo = :ativo order by descricao desc';
  CadFaixaTamanhoDM.ConsultarTamanho.ParamByName('ativo').AsString := 'S';
  CadFaixaTamanhoDM.ConsultarTamanho.Open;

  CadFaixaTamanhoDM.ConsultarFaixa.SQL.Clear;
  CadFaixaTamanhoDM.ConsultarFaixa.SQL.Text :=
  'select * from cadfaixa';
  CadFaixaTamanhoDM.ConsultarFaixa.Open;

  for i := 0 to GridConsultarFaixa.Columns.Count - 1 do
    GridConsultarFaixa.Columns[i].Width := GridConsultarFaixa.Canvas.TextWidth(GridConsultarFaixa.Columns[i].Title.Caption + '     ');
  for i := 0 to GridTamanhos.Columns.Count - 1 do
    GridTamanhos.Columns[i].Width := GridTamanhos.Canvas.TextWidth(GridTamanhos.Columns[i].Title.Caption + '     ');
  except
  ShowMessage('Erro na inclusão!');
  end;
end;
end;
end;
end;

procedure TCadFaixaTamanho.btnAlterarClick(Sender: TObject);
var I: Integer;
begin
  if EdtCodigo.Text = '' then begin
  ShowMessage('Faixa não selecionada!');
  end
  else begin
  CBAtivo.Enabled := True;
  GridConsultarFaixa.Enabled := False;
  GridTamanhos.Enabled := Enabled;

  btnIncluir.Visible := False;
  btnAlterar.Visible := False;
  btnExcluir.Visible := False;

  btnDesistir.Visible := True;
  btnGravarAlterar.Visible := True;

  CadFaixaTamanhoDM.ConsultarTamanho.SQL.Clear;
  CadFaixaTamanhoDM.ConsultarTamanho.SQL.Text :=
  'select distinct(codigo), descricao from cadtamanho where ativo = :ativo order by descricao desc';
  CadFaixaTamanhoDM.ConsultarTamanho.ParamByName('ativo').AsString := 'S';
  CadFaixaTamanhoDM.ConsultarTamanho.Open;

  CadFaixaTamanhoDM.ConsultarFaixa.SQL.Clear;
  CadFaixaTamanhoDM.ConsultarFaixa.SQL.Text :=
  'select * from cadfaixa';
  CadFaixaTamanhoDM.ConsultarFaixa.Open;

  for i := 0 to GridConsultarFaixa.Columns.Count - 1 do
    GridConsultarFaixa.Columns[i].Width := GridConsultarFaixa.Canvas.TextWidth(GridConsultarFaixa.Columns[i].Title.Caption + '     ');
  for i := 0 to GridTamanhos.Columns.Count - 1 do
    GridTamanhos.Columns[i].Width := GridTamanhos.Canvas.TextWidth(GridTamanhos.Columns[i].Title.Caption + '     ');
end;
end;

procedure TCadFaixaTamanho.btnGravarAlterarClick(Sender: TObject);
var codigo, descricao, ativo: string;
    I: Integer;
begin
  codigo := EdtCodigo.Text;
  Descricao := EdtDescricao.Text;
  if CBAtivo.Checked then Ativo := 'S'
  else Ativo := 'N';

  if EdtCodigo.Text = '' then begin
  ShowMessage('Código não pode ser vazio!');
  end
  else begin

  if EdtDescricao.Text = '' then begin
  ShowMessage('Descrição não pode ser vazia!');
  end
  else begin

  CadFaixaTamanhoDM.UpdateQuery.SQL.Clear;
  CadFaixaTamanhoDM.UpdateQuery.SQL.Text :=
  'update cadfaixa set descricao = :descricao, ativo = :ativo where codigo = :codigo';
  CadFaixaTamanhoDM.UpdateQuery.ParamByName('codigo').AsString := codigo;
  CadFaixaTamanhoDM.UpdateQuery.ParamByName('descricao').AsString := descricao;
  CadFaixaTamanhoDM.UpdateQuery.ParamByName('ativo').AsString := ativo;

  LogsDM.InserirLog.SQL.Clear;
  LogsDM.InserirLog.SQL.Text :=
  'insert into logs (descricao, tela, data, emp_id, usuario) values (:descricao, :tela, :data, :emp_id, :usuario)';
  LogsDM.InserirLog.ParamByName('descricao').AsString :=
  'Alterou a faixa no código ' + codigo + ' na descrição ' + descricao + ' e ativo ' + ativo;
  LogsDM.InserirLog.ParamByName('tela').AsString := 'CadFaixaTamanho';
  LogsDM.InserirLog.ParamByName('data').AsDatetime := Now;
  LogsDM.InserirLog.ParamByName('usuario').AsString := UsuarioLogado;
 LogsDM.InserirLog.ParamByName('emp_id').AsString := EmpresaLogada;
  try
  CadFaixaTamanhoDM.UpdateQuery.ExecSQL;
  LogsDM.InserirLog.ExecSQL;
  ShowMessage('Alterado com sucesso!');

  EdtCodigo.Enabled := False;
  EdtDescricao.Enabled := False;
  CBAtivo.Enabled := False;
  GridConsultarFaixa.Enabled := True;
  GridTamanhos.Enabled := False;

  btnIncluir.Visible := True;
  btnAlterar.Visible := True;
  btnExcluir.Visible := True;

  btnDesistir.Visible := False;
  btnGravarAlterar.Visible := False;

  CadFaixaTamanhoDM.ConsultarTamanho.SQL.Clear;
  CadFaixaTamanhoDM.ConsultarTamanho.SQL.Text :=
  'select distinct(codigo), descricao from cadtamanho where ativo = :ativo order by descricao desc';
  CadFaixaTamanhoDM.ConsultarTamanho.ParamByName('ativo').AsString := 'S';
  CadFaixaTamanhoDM.ConsultarTamanho.Open;

  CadFaixaTamanhoDM.ConsultarFaixa.SQL.Clear;
  CadFaixaTamanhoDM.ConsultarFaixa.SQL.Text :=
  'select * from cadfaixa';
  CadFaixaTamanhoDM.ConsultarFaixa.Open;

  for i := 0 to GridConsultarFaixa.Columns.Count - 1 do
    GridConsultarFaixa.Columns[i].Width := GridConsultarFaixa.Canvas.TextWidth(GridConsultarFaixa.Columns[i].Title.Caption + '     ');
  for i := 0 to GridTamanhos.Columns.Count - 1 do
    GridTamanhos.Columns[i].Width := GridTamanhos.Canvas.TextWidth(GridTamanhos.Columns[i].Title.Caption + '     ');
  except
  ShowMessage('Erro na alteração!');
 end;
end;
end;
end;

procedure TCadFaixaTamanho.btnDesistirClick(Sender: TObject);
var I: Integer;
begin
  EdtCodigo.Enabled := False;
  EdtDescricao.Enabled := False;
  CBAtivo.Enabled := False;
  GridConsultarFaixa.Enabled := True;
  GridTamanhos.Enabled := False;

  EdtCodigo.Clear;
  EdtDescricao.Clear;

  btnIncluir.Visible := True;
  btnAlterar.Visible := True;
  btnExcluir.Visible := True;

  btnDesistir.Visible := False;
  btnGravarIncluir.Visible := False;
  btnGravarAlterar.Visible := False;

  CadFaixaTamanhoDM.ConsultarTamanho.SQL.Clear;
  CadFaixaTamanhoDM.ConsultarTamanho.SQL.Text :=
  'select distinct(codigo), descricao from cadtamanho where ativo = :ativo order by descricao desc';
  CadFaixaTamanhoDM.ConsultarTamanho.ParamByName('ativo').AsString := 'S';
  CadFaixaTamanhoDM.ConsultarTamanho.Open;

  CadFaixaTamanhoDM.ConsultarFaixa.SQL.Clear;
  CadFaixaTamanhoDM.ConsultarFaixa.SQL.Text :=
  'select * from cadfaixa';
  CadFaixaTamanhoDM.ConsultarFaixa.Open;

  for i := 0 to GridConsultarFaixa.Columns.Count - 1 do
    GridConsultarFaixa.Columns[i].Width := GridConsultarFaixa.Canvas.TextWidth(GridConsultarFaixa.Columns[i].Title.Caption + '     ');
  for i := 0 to GridTamanhos.Columns.Count - 1 do
    GridTamanhos.Columns[i].Width := GridTamanhos.Canvas.TextWidth(GridTamanhos.Columns[i].Title.Caption + '     ');
end;

procedure TCadFaixaTamanho.btnExcluirClick(Sender: TObject);
var codigo, descricao, ativo: string;
    I: Integer;
begin
  codigo := EdtCodigo.Text;
  Descricao := EdtDescricao.Text;
  if CBAtivo.Checked then Ativo := 'S'
  else Ativo := 'N';

  if EdtCodigo.Text = '' then begin
  ShowMessage('Nenhuma faixa selecionada!')
  end
  else begin
  CadFaixaTamanhoDM.SelectQuery.SQL.Clear;
  CadFaixaTamanhoDM.SelectQuery.SQL.Text :=
  'select * from cadproduto where faixa = :codigo';
  CadFaixaTamanhoDM.SelectQuery.ParamByName('codigo').AsString := codigo;
  CadFaixaTamanhoDM.SelectQuery.Open;

  if not CadFaixaTamanhoDM.SelectQuery.IsEmpty then begin
  ShowMessage('Faixa está sendo usada em um cadastro de produto! Favor verifique!');
  end
  else begin

  CadFaixaTamanhoDM.DeleteQuery.SQL.Clear;
  CadFaixaTamanhoDM.DeleteQuery.SQL.Text :=
  'delete from cadfaixa where codigo = :codigo';
  CadFaixaTamanhoDM.DeleteQuery.ParamByName('codigo').AsString := codigo;

  LogsDM.InserirLog.SQL.Clear;
  LogsDM.InserirLog.SQL.Text :=
  'insert into logs (descricao, tela, data, emp_id, usuario) values (:descricao, :tela, :data, :emp_id, :usuario)';
  LogsDM.InserirLog.ParamByName('descricao').AsString :=
  'Excluiu a faixa no código ' + codigo + ' na descrição ' + descricao + ' e ativo ' + ativo;
  LogsDM.InserirLog.ParamByName('tela').AsString := 'CadFaixaTamanho';
  LogsDM.InserirLog.ParamByName('data').AsDatetime := Now;
  LogsDM.InserirLog.ParamByName('usuario').AsString := UsuarioLogado;
  LogsDM.InserirLog.ParamByName('emp_id').AsString := EmpresaLogada;
  try
  CadFaixaTamanhoDM.DeleteQuery.ExecSQL;
  LogsDM.InserirLog.ExecSQL;
  ShowMessage('Excluído com sucesso!');

  EdtCodigo.Clear;
  EdtDescricao.Clear;

  CadFaixaTamanhoDM.ConsultarTamanho.SQL.Clear;
  CadFaixaTamanhoDM.ConsultarTamanho.SQL.Text :=
  'select distinct(codigo), descricao from cadtamanho where ativo = :ativo order by descricao desc';
  CadFaixaTamanhoDM.ConsultarTamanho.ParamByName('ativo').AsString := 'S';
  CadFaixaTamanhoDM.ConsultarTamanho.Open;

  CadFaixaTamanhoDM.ConsultarFaixa.SQL.Clear;
  CadFaixaTamanhoDM.ConsultarFaixa.SQL.Text :=
  'select * from cadfaixa';
  CadFaixaTamanhoDM.ConsultarFaixa.Open;

  for i := 0 to GridConsultarFaixa.Columns.Count - 1 do
    GridConsultarFaixa.Columns[i].Width := GridConsultarFaixa.Canvas.TextWidth(GridConsultarFaixa.Columns[i].Title.Caption + '     ');
  for i := 0 to GridTamanhos.Columns.Count - 1 do
    GridTamanhos.Columns[i].Width := GridTamanhos.Canvas.TextWidth(GridTamanhos.Columns[i].Title.Caption + '     ');
  except
  ShowMessage('Erro na exclusão!');
  end;
end;
end;
end;

procedure TCadFaixaTamanho.btnFecharClick(Sender: TObject);
begin
 if Parent is TTabSheet then
 Parent.Free;
end;

procedure TCadFaixaTamanho.GridConsultarFaixaCellClick(Column: TColumn);
var codigo, descricao, ativo: string;
begin
  EdtCodigo.Text := CadFaixaTamanhoDM.ConsultarFaixa.FieldByName('codigo').AsString;
  EdtDescricao.Text := CadFaixaTamanhoDM.ConsultarFaixa.FieldByName('descricao').AsString;
  CBAtivo.Checked := CadFaixaTamanhoDM.ConsultarFaixa.FieldByName('ativo').AsString = 'S';
end;

procedure TCadFaixaTamanho.GridTamanhosCellClick(Column: TColumn);
var codigo, descricao: string;
begin
  if EdtDescricao.Text = '' then begin
  EdtDescricao.Text := CadFaixaTamanhoDM.ConsultarTamanho.FieldByName('descricao').AsString + EdtDescricao.Text
  end
  else begin
  EdtDescricao.Text := EdtDescricao.Text +  ' / ' + CadFaixaTamanhoDM.ConsultarTamanho.FieldByName('descricao').AsString;
end;
end;

procedure TCadFaixaTamanho.EdtAcessoCodigoExit(Sender: TObject);
var codigo, descricao: string;
begin
  codigo := EdtAcessoCodigo.Text;
  CadFaixaTamanhoDM.ConsultarFaixa.SQL.Clear;
  CadFaixaTamanhoDM.ConsultarFaixa.SQL.Text :=
  'select * from cadfaixa where codigo = :codigo';
  CadFaixaTamanhoDM.ConsultarFaixa.ParamByName('codigo').AsString := codigo;
  CadFaixaTamanhoDM.ConsultarFaixa.Open;

  descricao := CadFaixaTamanhoDM.ConsultarFaixa.FieldByName('descricao').AsString;
end;

procedure TCadFaixaTamanho.SBConsFaixaClick(Sender: TObject);
var codigo, descricao: string;
begin
  CadFaixaTamanhoDM.ConsultarFaixa.SQL.Clear;
  CadFaixaTamanhoDM.ConsultarFaixa.SQL.Text :=
  'select * from cadfaixa';
  CadFaixaTamanhoDM.ConsultarFaixa.Open;

  Application.CreateForm(TConsultarFaixa, ConsultarFaixa);
  codigo := ConsultarFaixa.SelecionarFaixa;
  descricao := ConsultarFaixa.descricao;
  if codigo <> '' then
  begin
    EdtAcessoCodigo.Text := codigo;
    EdtAcessoDescricao.Text := Descricao;
  end;
end;

procedure TCadFaixaTamanho.btnAcessoConsultarClick(Sender: TObject);
var codigo, ativo: string;
    temwhere: boolean;
    i: integer;
begin
 CadFaixaTamanhoDM.AcessoQuery.SQL.Clear;
 CadFaixaTamanhoDM.AcessoQuery.SQL.Text :=
 'select * from cadfaixa';
 temwhere := false;

 if codigo <> '' then begin
  if temwhere then begin
   CadFaixaTamanhoDM.AcessoQuery.SQL.Add('and codigo = :codigo');
  end
  else begin
   CadFaixaTamanhoDM.AcessoQuery.SQL.Add('where codigo = :codigo');
   temwhere := true;
  end;
  CadFaixaTamanhoDM.AcessoQuery.Parambyname('codigo').AsString := codigo;
 end;

 if RGAcessoAtivo.ItemIndex = 0 then begin
  if temwhere then begin
  CadFaixaTamanhoDM.AcessoQuery.SQL.Add('and ativo = :ativo');
  end
  else begin
  CadFaixaTamanhoDM.AcessoQuery.SQL.Add('where ativo = :ativo');
  temwhere := true;
  end;
 CadFaixaTamanhoDM.AcessoQuery.ParamByName('ativo').AsString := 'S';
 end;

 if RGAcessoAtivo.ItemIndex = 1 then begin
  if temwhere then begin
  CadFaixaTamanhoDM.AcessoQuery.SQL.Add('and ativo = :ativo');
  end
  else begin
  CadFaixaTamanhoDM.AcessoQuery.SQL.Add('where ativo = :ativo');
  temwhere := true;
  end;
 CadFaixaTamanhoDM.AcessoQuery.ParamByName('ativo').AsString := 'N';
 end;
 CadFaixaTamanhoDM.AcessoQuery.Open;
 for i := 0 to AcessoGrid.Columns.Count - 1 do
  AcessoGrid.Columns[i].Width := AcessoGrid.Canvas.TextWidth(AcessoGrid.Columns[i].Title.Caption + '     ');
end;
end.
