unit ConsultarEstado;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.ExtCtrls, Data.DB, Vcl.StdCtrls, EstadoDataModule,
  Vcl.Grids, Vcl.DBGrids;

type
  TConsultarEstadoForm = class(TForm)
    Panel1: TPanel;
    GridEstado: TDBGrid;
    btnSelecionarEstado: TButton;
    procedure btnSelecionarEstadoClick(Sender: TObject);
  private
   EsCodigo: string;
  public
   function SelecionarEstado: string;
   function Codigo: string;
  end;

var
  ConsultarEstadoForm: TConsultarEstadoForm;

implementation

{$R *.dfm}

function TConsultarEstadoForm.SelecionarEstado: string;
begin
  EsCodigo := '';
  ShowModal;
    Result := EsCodigo
end;

procedure TConsultarEstadoForm.btnSelecionarEstadoClick(Sender: TObject);
begin
  EsCodigo := CadEstadoModule.FDQuery1.FieldByName('codigo').AsString;
  Close;
end;

function TConsultarEstadoForm.Codigo: string;
begin
  Result := EsCodigo;
end;

end.
