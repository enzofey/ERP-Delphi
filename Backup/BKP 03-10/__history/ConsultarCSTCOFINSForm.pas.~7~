unit ConsultarCSTCOFINSForm;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Data.DB, Vcl.Grids, Vcl.DBGrids,
  Vcl.StdCtrls, Vcl.ExtCtrls,
  CSTCOFINSDataModule;

type
  TConsultarCSTCOFINS = class(TForm)
    Panel1: TPanel;
    btnSelecionarCSTCOFINS: TButton;
    Grid: TDBGrid;
    procedure btnSelecionarCSTCOFINSClick(Sender: TObject);
  private
    CofinsCST: string;
  public
    function SelecionarCSTCOFINS: string;
    function CST: string;
  end;

var
  ConsultarCSTCOFINS: TConsultarCSTCOFINS;

implementation

{$R *.dfm}

function TConsultarCSTCOFINS.SelecionarCSTCOFINS: string;
begin
 CofinsCST := '';
 ShowModal;
 Result := CofinsCST;
end;

function TConsultarCSTCOFINS.CST: string;
begin
  Result := CofinsCST;
end;

procedure TConsultarCSTCOFINS.btnSelecionarCSTCOFINSClick(Sender: TObject);
begin
  CadCSTCOFINSDataModule.GridQuery.FieldByName('CST').AsString;
  Close;
end;
end.
