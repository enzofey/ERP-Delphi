unit ConsultarENQIPIForm;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Data.DB, Vcl.Grids, Vcl.DBGrids,
  Vcl.StdCtrls, Vcl.ExtCtrls,
  ENQIPIDM;

type
  TConsultarENQIPI = class(TForm)
    Panel1: TPanel;
    btnSelecionarENQIPI: TButton;
    Grid: TDBGrid;
    procedure btnSelecionarENQIPIClick(Sender: TObject);
  private
    EnqIPI: String;
    EnqIPIDescricao: string;
  public
    function SelecionarEnqIPI: string;
    function Descricao: string;
  end;

var
  ConsultarENQIPI: TConsultarENQIPI;

implementation

{$R *.dfm}

function TConsultarENQIPI.SelecionarEnqIPI: string;
begin
 EnqIPI := '';
 ShowModal;
 Result := EnqIPI;
end;

function TConsultarENQIPI.Descricao: string;
begin
 Result := EnqIPIDescricao;
end;

procedure TConsultarENQIPI.btnSelecionarENQIPIClick(Sender: TObject);
begin
 EnqIPI := CadEnqIPIDM.ConsultarENQIPI.FieldByName('CST').AsString;
 EnqIPIDescricao := CadEnqIPIDM.ConsultarENQIPI.FieldByName('Descricao').AsString;
 Close;
end;
end.
