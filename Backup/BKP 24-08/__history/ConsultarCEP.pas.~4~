unit ConsultarCEP;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Data.DB, Vcl.Grids, Vcl.DBGrids,
  Vcl.StdCtrls, Vcl.ExtCtrls,
  CEPDataModule;

type
  TConsultarCEPForm = class(TForm)
    Panel1: TPanel;
    btnSelecionarCEP: TButton;
    Grid: TDBGrid;
    procedure FormShow(Sender: TObject);
    procedure btnSelecionarCEPClick(Sender: TObject);
  private
    CepCep: string;
    CepCidade: string;
    CepEstado: string;
    CepPais: string;
  public
    function SelecionarCEP: string;
    function CEP: string;
    function Cidade: string;
    function Estado: string;
    function Pais: string;
  end;

var
  ConsultarCEPForm: TConsultarCEPForm;

implementation

{$R *.dfm}

function TConsultarCEPForm.SelecionarCEP: string;
begin
  CepCep := '';
  ShowModal;
  Result := CepCep;
end;

function TConsultarCEPForm.CEP: string;
begin
  Result := CepCep;
end;

function TConsultarCEPForm.Cidade: string;
begin
  Result := CepCidade;
end;

function TConsultarCEPForm.Estado: string;
begin
  Result := CepEstado;
end;

function TConsultarCEPForm.Pais: string;
begin
  Result := CepPais;
end;

procedure TConsultarCEPForm.btnSelecionarCEPClick(Sender: TObject);
begin
  CepCep := CadCepDataModule.FDQuery1.FieldByName('CEP').AsString;
  Close;
end;

procedure TConsultarCEPForm.FormShow(Sender: TObject);
var
  i: Integer;
begin
  for i := 0 to Grid.Columns.Count - 1 do
    Grid.Columns[i].Width := Grid.Canvas.TextWidth(Grid.Columns[i].Title.Caption + '     ');
end;
end.
