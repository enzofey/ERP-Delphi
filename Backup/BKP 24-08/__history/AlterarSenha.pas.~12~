unit AlterarSenha;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.ExtCtrls, Vcl.StdCtrls,
  UsuarioDataModule, Vcl.Buttons,
  Usuario, ConsultarUsuarioForm;

type
  TAlterarSenhaForm = class(TForm)
    Panel1: TPanel;
    lblSenhaAntiga: TLabel;
    lblSenhaNova: TLabel;
    lblConfirmarSenha: TLabel;
    edtconfirmarsenha: TEdit;
    edtnovasenha: TEdit;
    edtSenha: TEdit;
    btnGravar: TButton;
    btnDesistir: TButton;
    lblUsuario: TLabel;
    SBUsuario: TSpeedButton;
    EdtUsuario: TEdit;
    procedure btnDesistirClick(Sender: TObject);
    procedure btnGravarClick(Sender: TObject);
    procedure SBUsuarioClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  AlterarSenhaForm: TAlterarSenhaForm;

implementation

{$R *.dfm}

procedure TAlterarSenhaForm.btnDesistirClick(Sender: TObject);
begin
 Close;
end;

procedure TAlterarSenhaForm.btnGravarClick(Sender: TObject);
var novasenha, senha, confirmarsenha, usuario: string;
begin
 novasenha := EdtNovaSenha.Text;
 senha := EdtSenha.text;
 confirmarsenha := EdtConfirmarSenha.Text;
 usuario := EdtUsuario.Text;

 if EdtUsuario.text = '' then begin
 ShowMessage('Usuário não selecionado!');
 end
 else begin

 CadUsuarioDataModule.SenhaQuery.SQL.Clear;
 CadUsuarioDataModule.SenhaQuery.SQL.Text :=
 'select * from usuario where usuario = :usuario and senha = :senha';
 CadUsuarioDataModule.SenhaQuery.ParamByName('usuario').AsString := usuario;
 CadUsuarioDataModule.SenhaQuery.ParamByName('senha').AsString := senha;

 if CadUsuarioDataModule.SenhaQuery.IsEmpty then begin
 ShowMessage ('Usuário e senha não conferem');
 end
 else begin

 if Edtnovasenha.text <> EdtConfirmarsenha.text then begin
 ShowMessage('Senhas não são iguais! Favor verifique!');
 end
 else begin

 CadUsuarioDataModule.SenhaQuery.SQL.Clear;
 CadUsuarioDataModule.SenhaQuery.SQL.Text :=
 'update usuario set senha = :novasenha';
 CadUsuarioDataModule.SenhaQuery.ParamByName('usuario').AsString := usuario;
 CadUsuarioDataModule.SenhaQuery.ParamByName('novasenha').AsString := novasenha;
 end;
end;
end;
end;

procedure TAlterarSenhaForm.SBUsuarioClick(Sender: TObject);
var
  codigo, usuario, ativo: string;
begin
  CadUsuarioDataModule.FDQuery1.Close;
  CadUsuarioDataModule.FDQuery1.Open;
  Application.CreateForm(TConsultarUsuario, ConsultarUsuario);
  codigo := ConsultarUsuario.SelecionarUsuario;
  if codigo <> '' then
  begin
    usuario := ConsultarUsuario.Usuario;
    EdtUsuario.Text := usuario;
  end;
end;
end.
